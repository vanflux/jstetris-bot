{
  "manifest_version": 3,
  "name": "JSTetris Bot",
  "version": "1.0.0",
  "description": "JSTetris Bot",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://jstris.jezevec10.com/*"],
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "incognito": "split",
  "web_accessible_resources": [
    {
      "resources": [ "content.js" ],
      "matches": [ "*://*/*" ]
    }
  ]
}